        <TextBlock HorizontalAlignment="Left" Margin="421,110,0,0" Text="บาท/วัน" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="421,173,0,0" Text="บาท" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="421,272,0,0" Text="วัน" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20"/>
        <Button x:Name="totolCalue" Content="คำนวณ" HorizontalAlignment="Left" Height="30" Margin="72,217,0,0" VerticalAlignment="Top" Width="172" FontSize="20" Click="totolCalue_Click"/>
        <TextBox x:Name="outInCome" HorizontalAlignment="Left" Margin="259,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="20"/>
        <TextBox x:Name="wantToPay" HorizontalAlignment="Left" Margin="259,166,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="20"/>

    </Grid>
</Window>
